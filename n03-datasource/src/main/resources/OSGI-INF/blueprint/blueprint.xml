<?xml version="1.0" encoding="UTF-8"?>
<blueprint default-activation="eager"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        >
    <bean id="dataSourceH2" class="org.h2.jdbcx.JdbcDataSource">
        <property name="url" value="jdbc:h2:tcp://10.10.34.98/camel"/>
        <property name="user" value="sa"/>
        <property name="password" value="123"/>
    </bean>

    <service ref="dataSourceH2" interface="javax.sql.DataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/DataSource"/>
        </service-properties>
    </service>
</blueprint>
